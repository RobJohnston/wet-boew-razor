@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["We couldn't find that Web page (Error 404)"];
    Layout = "~/Pages/Shared/_LayoutError.cshtml";
}

<h1><span class="glyphicon glyphicon-warning-sign mrgn-rght-md"></span> @ViewData["Title"]</h1>
<p>
    @Localizer["We're sorry you ended up here. Sometimes a page gets moved or deleted, but hopefully we can help you find what you're looking for."]</p>
<ul>
    <li>@Localizer["Return to the"] <a asp-page="/Index">@Localizer["home page"]</a></li>
</ul>
