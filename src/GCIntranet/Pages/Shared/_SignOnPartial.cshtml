@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<section id="wb-so">
    <h2 class="wb-inv">@Localizer["Sign-on information"]</h2>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (@User.Identity.IsAuthenticated)
                {
                    <p class="btn">@Localizer["Signed in as"] <span class="wb-so-uname">@User.Identity.Name</span></p>
                    <button class="btn btn-default" type="button">@Localizer["Account settings"]</button>
                    <button class="btn btn-primary" type="button">@Localizer["Sign out"]</button>
                }
                else {
                <button class="btn btn-default" type="button">Register</button>
                <button class="btn btn-primary" type="button">Sign in</button>
                }
            </div>
        </div>
    </div>
</section>